{
  "manifest_version": 3,
  "name": "YouTube Interactive Drawing",
  "version": "1.0",
  "description": "Draw on YouTube videos in real-time!",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-drawing@ganesh.dev",
      "data_collection_permissions": {
        "collects_data": false,
        "required": ["none"]
      }
    }
  }
}
